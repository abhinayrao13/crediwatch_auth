<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Log in</h1>

  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>

  <%= f.label :password, class: "sr-only" %><br />
  <%= f.password_field :password, required: true, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="mt-5 mb-3">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "" %>
    </p>
  <% end %>
<% end %>

